@page "{id}"
@model ShetaPersonal.Web.Pages.Admin.Gallary.EditgallaryModel
@{
    ViewData["Title"] = "Editgallary";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

    <div class="main-content" id="panel">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-user">
                    <div class="card-header">
                        <h5 class="card-title" style="font-size: 25px;">ویرایش تصویر</h5>
                    </div>
                    <div class="card-body" style="float: right !important;">

                        <form method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Gallery.RezomeId"/>
                            <input type="hidden" asp-for="Gallery.GalleryId"/>
                            <input type="hidden" asp-for="Gallery.Image"/>
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="control-label" for="UserName">عنوان </label>
                                        <input type="text" asp-for="Gallery.Gallerytitle" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">تصویر</label>
                                        <img style="width: 200px;" src="/Site/img/@Model.Gallery.Image"/>
                                        <input type="file" name="ImgGallery" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-12 pl-1">
                                    <div class="form-group">
                                        <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" style="width: 100%;" />
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

