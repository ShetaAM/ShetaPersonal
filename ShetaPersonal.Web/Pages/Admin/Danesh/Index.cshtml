@page
@model ShetaPersonal.Web.Pages.Admin.Danesh.IndexModel
@{
    ViewData["Title"] = "لیست دانش فردی";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

    <div class="main-content" id="panel">
        @await Component.InvokeAsync("NavbarGroupComponent")
        <hr />
        <div class="container-fluid mt--6">
            <!-- Dark table -->
            <div class="row">
                <div class="col">
                    <div class="card bg-default shadow">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="text-white mb-0">لیست دانش فردی </h3>
                            <a asp-page="createdanesh" class="btn btn-success">افزودن دانش</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center table-dark table-flush">
                                <thead class="thead-dark" style="font-size: medium!important;">
                                    <tr>
                                        <th scope="col" class="sort" data-sort="budget">عنوان دانش</th>
                                        <th scope="col" class="sort" data-sort="budget">آیکون دانش</th>
                                        <th scope="col" class="sort" data-sort="status">توضیح دانش</th>
                                        <th scope="col" class="sort" data-sort="status">دستورات</th>
                                    </tr>
                                </thead>
                                <tbody class="list">

                                    @foreach (var maharat in Model.ViewModel.Daneshes)
                                    {
                                        <tr>
                                            <td>@maharat.DaneshName</td>
                                            <td><i class="@maharat.Icon"></i></td>
                                            <td>@maharat.Tozihat</td>
                                            <td>
                                                <a asp-page="editdanesh" asp-route-id="@maharat.DId" class="btn btn-warning btn-sm">
                                                    ویرایش
                                                </a>
                                                <a asp-page="deletedanesh" asp-route-id="@maharat.DId" class="btn btn-danger btn-sm">
                                                    حذف
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>

                        <div class="card-footer py-4 shadow" style="background-color: #263238;">
                            <nav aria-label="...">
                                <ul class="pagination justify-content-end mb-0">

                                    @for (int i = 1; i <= Model.ViewModel.pagaCount; i++)
                                    {
                                        <li class="page-item  @((i==Model.ViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                            <a class="page-link" href="/Admin/danesh?PageId=@i">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

