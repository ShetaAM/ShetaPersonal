@page
@model ShetaPersonal.Web.Pages.Admin.Sabeghe.EditSabegheModel
@{
    ViewData["Title"] = "ویرایش سابقه";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

    <div class="main-content" id="panel">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-user">
                    <div class="card-header">
                        <h5 class="card-title" style="font-size: 25px;">ویرایش تحصیلات</h5>
                    </div>
                    <div class="card-body" style="float: right !important;">

                        <form method="post" enctype="multipart/form-data">
                            <div class="row">
                                <input type="hidden"asp-for="Sabeghe.SId"/>
                                <input type="hidden" asp-for="Sabeghe.UserId" value="1"/>
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="control-label" for="UserName">عنوان</label>
                                        <input type="text" asp-for="Sabeghe.Stitle" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 px-1">
                                    <div class="form-group">
                                        <label class="control-label" for="Email">شروع</label>
                                        <input type="text" asp-for="Sabeghe.StartTime" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="control-label" for="UserName">پایان</label>
                                        <input type="text" asp-for="Sabeghe.EndTime" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="control-label" for="UserName">توضیحات</label>
                                        <textarea asp-for="Sabeghe.Description" class="form-control"></textarea>
                                        <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label class="control-label" for="UserName">آیکون</label>
                                        <input type="text" asp-for="Sabeghe.Icon" class="form-control">
                                        <span class="text-danger field-validation-valid" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" style="width: 100%;"/>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
