
@model ShetaPersonal.Core.DTO.TamasViewModel;


<div class="container">
    <!-- Contact Section -->
    <div class="contact-section row">
        <!-- Section Title -->
        <div class="section-title text-center col-xs-12">
            <h2><span>ارسال پیام</span></h2>
        </div>

        <!-- Contact Info -->
        <div class="contact-info col-md-4 col-xs-12"style="direction: rtl;float: right;text-align: center;">
            <div>
                <h4>موبایل</h4>
                <p>@Model.MyPhone</p>
            </div>
            <div>
                <h4>ایمیل</h4>
                <p>@Model.MyEmail</p>
            </div>
            
        </div>
        <!-- Contact Form -->
        <div class="contact-form col-md-8 col-xs-12"style="direction: rtl;float: right;text-align: left;">
            <form asp-action="tamas" data-toggle="validator">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" asp-for="name" placeholder="نام و نام خانوادگی" required>
                            <p class="help-block with-errors"></p>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="Email" placeholder="ایمیل" required>
                            <p class="help-block with-errors"></p>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="Phone" placeholder="شماره موبایل" required>
                            <p class="help-block with-errors"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea asp-for="Massage" placeholder="متن پیام" required></textarea>
                            <p class="help-block with-errors"></p>
                        </div>
                        <div class="form-group submit-group"style="width: 100%;">
                            <input type="submit" value="ارسال" class="btn-block">
                        </div>
                    </div>
                </div>
            </form>
            <p class="form-message"></p>
            <!-- Social Media -->
            <div class="social-media">
                <h3><span>شبکه های</span> اجتماعی</h3>
                @foreach (var s in Model.Socials)
                {
                    <a href="@s.SocialLink"><i class="@s.SocialIcon"></i></a>
                }
            </div>
        </div>
    </div>
</div>
